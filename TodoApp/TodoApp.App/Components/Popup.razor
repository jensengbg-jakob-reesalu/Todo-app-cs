<Button Clicked="@ShowModal">ADD</Button>

<Modal @ref="modalRef">
    <ModalBackdrop />
    <ModalContent IsCentered="true">
        <ModalHeader>
            <CloseButton Clicked="@HideModal" />
        </ModalHeader>
        <ModalBody>
            <Field>
                <TextEdit @bind-Text="@TodoItemTextInput" @bind-Placeholder="@PlaceHolderText" />
            </Field>
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Primary" Clicked="@AddTodoItem">Done</Button>
        </ModalFooter>
    </ModalContent>
</Modal>